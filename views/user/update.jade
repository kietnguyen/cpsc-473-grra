extends ../layout

block content
  h1 Update Username and password
  form(method='POST', action='/user/#{uid}/update')
    table(border='0')
      tbody
        tr
          td username:
          td
            input(type='text', name='user')
        tr
          td password:
          td
            input(type='password', name='pass')
    input(type='submit', value='Update')
