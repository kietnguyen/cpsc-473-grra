.col-md-offset-3.col-md-6
  .panel.panel-default
    .panel-heading
      .panel-title
        i.fa.fa-edit.fa-fw
        | &nbsp; Edit account
    .panel-body(style="padding:30px")
      form(method="POST", action="/user/update")
        .form-group
          .input-group
            .input-group-addon: i.fa.fa-user.fa-fw
            input.form-control(type="text", name="user", required, placeholder="Enter your new username")
        .form-group
          .input-group
            .input-group-addon: i.fa.fa-lock.fa-fw
            input.form-control(type="password", name="pass", required, placeholder="Enter the new Password")
        .text-center
          input.btn.btn-primary(type="submit", value="Save", style="margin-right: 12px; width: 69px;")
          a.btn.btn-default.cancel-btn(href="#") Cancel

script.
  $("a.cancel-btn").click(function() {
    window.location.reload(true);
  });
